{
  "name": "shikimori-ext",
  "description": "Video player for shikimori",
  "version": "0.1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://*.shikimori.one/*"
      ],
      "css": [
        "inpage.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "inpage.js",
    "watch.html"
  ]
}
